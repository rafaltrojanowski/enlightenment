!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Bootstrap Core CSS
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
    %title Panel Admin
    = stylesheet_link_tag 'sb-admin/admin', media: "all", "data-turbolinks-track" => true
    %link{href: "http://getbootstrap.com/dist/css/bootstrap.min.css", rel: "stylesheet"}
    %link{href: "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel: "stylesheet"}
    = javascript_include_tag "sb-admin/admin", "data-turbolinks-track" => true
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Please Sign In
            .panel-body
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: '', role: 'form'}) do |f|
                %fieldset
                  .form-group
                    = f.input_field :email, required: false, autofocus: true, class: 'form-control'
                  .form-group
                    = f.input_field :password, required: false, class: 'form-control'
                  .checkbox
                    %label
                      = f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable?
                  = f.button :submit, "Sign in", class: 'a btn btn-lg btn-success btn-block'
