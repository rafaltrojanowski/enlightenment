<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="well">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form', html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="input-group">
      <%= f.label 'Email' %>
      <%= f.input_field :email, required: true, autofocus: true, class: 'form-control input-sm' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.label 'Password' %>
      <%= f.input_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: 'form-control input-sm' %>
      <%= f.label 'Password confirmation' %>
      <%= f.input_field :password_confirmation, required: false, class: 'form-control input-sm' %>
      <%= f.label 'Current password' %>
      <%= f.input_field :current_password, hint: "we need your current password to confirm your changes", required: true, class: 'form-control input-sm' %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn btn-success' %>
    </div>
  <% end %>


  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'label label-danger' %></p>
</div>
<%= link_to "Back", :back , class: 'btn btn-default' %>
