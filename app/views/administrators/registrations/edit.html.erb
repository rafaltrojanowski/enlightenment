<div class="container login-box">
  <div class="padded">
    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title"><%= t('administrators.auth.edit_my_account', default: "Edit my account") %></span>
      </div>
      <div class="box-content padded">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "separate-sections" }) do |f| %>
          <%= f.error_notification %>

          <%= f.full_error :email %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'envelope' %>
            </span>
            <%= f.email_field :email, autofocus: true, placeholder: t('administrators.auth.placeholders.email', default: "Email"), class: 'form-control'%>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.full_error :first_name %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'user' %>
            </span>
            <%= f.text_field :first_name, placeholder: t('administrators.auth.placeholders.first_name', default: "First name"), class: 'form-control'%>
          </div>
          <%= f.full_error :last_name %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'user' %>
            </span>
            <%= f.text_field :last_name, placeholder: t('administrators.auth.placeholders.last_name', default: "Last name"), class: 'form-control'%>
          </div>
          <div class="input-group no-margin">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password, placeholder: t('administrators.auth.placeholders.password', default: "Password"), class: 'form-control' %>
          </div>
          <span class="help-block note"><%= t('administrators.auth.hints.leave_blank_if_you_dont_want_to_change_it', default: 'Leave blank if you dont want to change it') %></span>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password_confirmation, placeholder: t('administrators.auth.placeholders.password_confirmation', default: "Password confirmation"), class: 'form-control' %>
          </div>
          <div class="input-group no-margin">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :current_password, placeholder: t('administrators.auth.placeholders.current_password', default: "Current password"), class: 'form-control' %>
          </div>
          <span class="help-block note"><%= t('administrators.auth.hints.we_need_your_current_password_to_confirm_your_changes', default: 'we need your current password to confirm your changes') %></span>

          <div>
            <button type="submit" class="btn btn-blue btn-block btn-default">
              <%= t('administrators.auth.update_my_account_button', default: "Update my account") %>
              <%= draw_icon "ok" %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>