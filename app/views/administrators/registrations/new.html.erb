<div class="container login-box">
  <div class="padded">
    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title"><%= t('administrators.auth.sign_up', default: "Sign up") %></span>
      </div>
      <div class="box-content padded">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "separate-sections" }) do |f| %>
          <%= f.error_notification %>

          <%= f.full_error :email %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'envelope' %>
            </span>
            <%= f.email_field :email, autofocus: true, placeholder: t('administrators.auth.placeholders.email', default: "Email"), class: 'form-control'%>
          </div>
          <%= f.full_error :first_name %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'user' %>
            </span>
            <%= f.text_field :first_name, placeholder: t('administrators.auth.placeholders.first_name', default: "First name"), class: 'form-control' %>
          </div>
          <%= f.full_error :last_name %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'user' %>
            </span>
            <%= f.text_field :last_name, placeholder: t('administrators.auth.placeholders.last_name', default: "Last name"), class: 'form-control'%>
          </div>
          <%= f.full_error :password %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password, required: true, placeholder: t('administrators.auth.placeholders.password', default: "Password"), class: 'form-control' %>
          </div>
          <%= f.full_error :password_confirmation %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password_confirmation, required: true, placeholder: t('administrators.auth.placeholders.password_confirmation', default: "Password confirmation"), class: 'form-control' %>
          </div>

          <div>
            <button type="submit" class="btn btn-blue btn-block btn-default">
              <%= t('administrators.auth.sign_up', default: "Sign up") %>
              <%= draw_icon "ok" %>
            </button>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>