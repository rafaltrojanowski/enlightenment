<div class="container login-box">
  <div class="padded">
    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title"><%= t('administrators.auth.change_my_password', default: "Change my password") %></span>
      </div>
      <div class="box-content padded">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "separate-sections" }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.full_error :password %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password, required: true, placeholder: t('administrators.auth.placeholders.password', default: "Password"), class: 'form-control' %>
          </div>
          <%= f.full_error :password_confirmation %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <%= draw_icon 'key' %>
            </span>
            <%= f.password_field :password_confirmation, required: true, placeholder: t('administrators.auth.placeholders.password_confirmation', default: "Password confirmation"), class: 'form-control' %>
          </div>

          <div>
            <button type="submit" class="btn btn-blue btn-block btn-default">
              <%= t('administrators.auth.change_my_password_button', default: "Change my password") %>
              <%= draw_icon "ok" %>
            </button>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>