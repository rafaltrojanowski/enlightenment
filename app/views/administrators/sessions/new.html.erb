<div class="container login-box">
  <div class="padded">
    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title"><%= t('administrators.auth.sign_in', default: "Login") %></span>
      </div>
      <div class="box-content padded">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "separate-sections" }) do |f| %>
          <%= f.error_notification %>
          <%= f.full_error :email %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <i class="icon-envelope"></i>
            </span>
            <%= f.email_field :email, autofocus: true, placeholder: t('administrators.auth.placeholders.email', default: "Email"), class: 'form-control'%>
          </div>
          <%= f.full_error :password %>
          <div class="input-group">
            <span class="input-group-addon" href="#">
              <i class="icon-key"></i>
            </span>
            <%= f.password_field :password, placeholder: t('administrators.auth.placeholders.password', default: "Password"), class: 'form-control' %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me, class: 'icheck' %>
              <%= f.label :remember_me, t('administrators.auth.remebmer_me', default: 'Remember me') %>
            </div>
          <% end %>
          <div>
            <button type="submit" class="btn btn-blue btn-block btn-default">
              <%= t('administrators.auth.sign_in_button', default: "Sign in") %>
              <%= draw_icon "signin" %>
            </button>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>