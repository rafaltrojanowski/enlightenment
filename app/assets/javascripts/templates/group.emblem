.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        button.btn.btn-danger.pull-right{ action "destroy" } delete
        if isEditing
          edit-group type="text" class="edit" value=bufferedName focus-out="doneEditing" insert-newline="doneEditing" escape-press="cancelEditing"
        else
          h4 click="editGroup" = name
      .panel-body
        .icons
          | Icon:
          i class="icon fa fa-bicycle fa-lg" data-name="bicycle"
          i class="icon fa fa-bolt fa-lg" data-name="bolt"
          i class="icon fa fa-bank fa-lg" data-name="bank"
          i class="icon fa fa-laptop fa-lg" data-name="laptop"
          i class="icon fa fa-music fa-lg" data-name="music"
        br
        | Participants:
        ul
          each users
            li
              = email
        link-to .btn.btn-success 'groups' | Back
  .col-sm-5
    .well
      h4 Manage members
      form submit="update"
        = input id="members" data-url=urlPath data-id=id
        button.btn.btn-success Update
      button.btn.btn-success{ action "save" } SaVe
