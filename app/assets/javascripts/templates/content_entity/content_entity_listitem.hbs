<div id="link_note">
  <div id="content_entity" class='list-group-item'>
    <img {{bind-attr src=content_entity.avatar}} style="width:60px;height:60px" class="img-circle">
    {{#if content_entity.isNote}}
      {{#link-to "content_entity" content_entity}}
        <i class="fa fa-newspaper-o fa-2x"></i>
        <b>{{content_entity.title}}</b>
      {{/link-to}}
      {{#if content_entity.group.name }}
        <i {{bind-attr class='content_entity.group.icon'}}> {{{content_entity.group.name}}}</i>
      {{/if}}
      <i class="fa fa-clock-o pull-right" id="show_date" data-toggle="tooltip" data-placement="top" {{bind-attr title=content_entity.formatedDate}}> {{{date content_entity.updated_at}}}</i>
      {{render 'content_entity.actions' content_entity}}
    {{else }}
      {{#link-to "content_entity" content_entity}}
        <i class="fa fa-globe fa-2x"></i>
        <b>{{content_entity.title}}</b>
      {{/link-to}}
      {{#if content_entity.group.name }}
        <i {{bind-attr class='content_entity.group.icon'}}> {{{content_entity.group.name}}}</i>
      {{/if}}
      <i class="fa fa-clock-o pull-right" id="show_date" data-toggle="tooltip" data-placement="top" {{bind-attr title=content_entity.formatedDate}}> {{{date content_entity.updated_at}}}</i>
      {{render 'content_entity.actions' content_entity}}
      <p class="ellipsis block" style="padding-left:70px;">
        {{{content_entity.body}}}
      </p>
      {{/if }}
  </div>
</div>
