<div id="container">
  <div class="well">
    <form class="form-horizontal" role="form" {{action "addEntry" on="submit"}}>
    <h4>Add content</h4>
      <div class="form-group" style="padding:14px;">
        {{view Ember.TextArea name='content_entity[content]' valueBinding="newEntryName" class="form-control" required="true"}}
      </div>
      <button class="btn btn-success" type="submit">Add
      </button>
    </form>
  </div>
</div>

<h1>
  <span class="label label-primary center-block">List</span>
</h1>

{{#each content_entity in paginatedContent}}
<div class="panel panel-success">
  <div class="panel-body">
    <br>
    <div class="col-md-2 col-sm-3 text-center">
      <a class="story-title" href="#"><img alt="" src="https://dl.dropboxusercontent.com/u/57582960/doge.png" style="width:100px;height:100px" class="img-circle"></a>
    </div>
    <div class="col-md-10 col-sm-9">
      <h3>{{content_entity.type}} {{content_entity.title}}</h3>
        <div class="row">
          <div class="col-xs-9">
            <h4><span class="label label-default">{{#link-to "content_entity" content_entity}}{{content_entity._content}}{{/link-to}}</span></h4>
            <h4>
              <small style="font-family:courier,'new courier';" class="text-muted">{{{content_entity.updated_at}}}  â€¢ 
                Added by: user.name</small>
            </h4>
          </div>
          <div class="col-xs-3"></div>
        </div>
      <br><br>
    </div>
  </div>
</div>
{{/each}}

{{pagination-links page=page pages=pages}}

