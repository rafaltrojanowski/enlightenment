<div id="container">
  <div class="well">
    <form class="form-horizontal" role="form" {{action "addEntry" on="submit"}}>
      <div class="input-group" style="padding:14px;">
        {{button-input name='content_entity[content]' valueBinding="newEntryName" class="form-control" required="true" id="textarea"}}
        <span class="input-group-btn">
          <button class="btn btn-success" type="submit" id="add_button" style="height:75px;">Add</button>
        </span>
      </div>
    </form>
  </div>
</div>

<div class="list-group">
  {{#each content_entity in paginatedContent itemController="ContentEntity"}}
    <div id="link_note">
      <div id="content_entity" class='list-group-item'>
        <img {{bind-attr src=content_entity.avatar}} style="width:60px;height:60px" class="img-circle">
        {{#if content_entity.isNote}}
          {{#link-to "content_entity" content_entity}}
            <i class="fa fa-newspaper-o fa-2x"></i>
            <b>{{showTitle content_entity.body}}</b>
          {{/link-to}}
          <span class="label label-info" style="font-family:courier,'new courier';">{{{content_entity.group.name}}}</span>
          <span class="label label-default pull-right" style="font-family:courier,'new courier';" id="show_date">{{{date content_entity.updated_at}}}</span>
          <button {{action confirmDelete content_entity}} class="btn btn-large btn-danger pull-right" id="destroy_button" style="display:none;"><i class="fa fa-trash"></i></button>
          <button {{action edit content_entity}} class="btn btn-large btn-warning pull-right" id="edit_button" style="display:none;"><i class="fa fa-pencil"></i></button>
        {{else }}
          {{#link-to "content_entity" content_entity}}
            <i class="fa fa-globe fa-2x"></i>
            <b>{{content_entity.title}}</b>
          {{/link-to}}
          <span class="label label-info" style="font-family:courier,'new courier';">{{{content_entity.group.name}}}</span>
          <span class="label label-default pull-right" style="font-family:courier,'new courier';" id="show_date">{{{date content_entity.updated_at}}}</span>
          <button {{action 'confirmDelete' content_entity}} class="btn btn-large btn-danger pull-right" id="destroy_button" style="display:none;"><i class="fa fa-trash"></i></button>
          <button {{action edit content_entity}} class="btn btn-large btn-warning pull-right" id="edit_button" style="display:none;"><i class="fa fa-pencil"></i></button>
          <p class="ellipsis block" style="padding-left:70px;">
            {{{content_entity.body}}}
          </p>
          {{/if }}
      </div>
    </div>
  {{/each}}
</div>

{{pagination-links page=page pages=pages}}
