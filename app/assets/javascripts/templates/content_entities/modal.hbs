<div class="modal-backdrop fade">&nbsp;
</div>
<div class="modal fade show" >
  <div class="modal-dialog">

    {{#if isLink}}

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" {{action 'close'}}>&times;</button>
        </div>
        <form {{action save on="submit"}}>
        <div class="modal-body">
          <div class="modal-body">
            <div {{bind-attr class="errors.title:error :field"}}>
              <label>Title</label>
              {{view Ember.TextField valueBinding="title" class="form-control"}}
              {{#each error in errors.title}}{{error.message}}{{/each}}
            </div>
            <div {{bind-attr class="errors.description:error :field"}}>
              <label>Description</label>
              {{view Ember.TextArea valueBinding="description" class="form-control"}}
              {{#each error in errors.description}}{{error.message}}{{/each}}
            </div>

            <div {{bind-attr class="errors.group:error :field"}}>
              <label>Group</label>
              {{view Ember.Select content = groups
                 optionValuePath="content.id"
                 optionLabelPath="content.name"
                 valueBinding="group_id"
                 class="form-control"
              }}
              {{#each error in errors.group}}{{error.message}}{{/each}}
            </div>

          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" {{bind-attr disabled="shouldDisableSubmit"}} class="btn btn-info">Save</button>
          <button {{action 'close'}} class="btn btn-default">Cancel</button>
          {{#if isSaving}}
            <img src="{{unbound App.AJAX_LOADER_IMG}}" alt="Loading..." class="ajax-loader">
            Saving...
          {{/if}}
        </div>
        </form>
      </div>

    {{ else }}

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" {{action 'close'}}>&times;</button>
          <h3></h3>
        </div>
        <form {{action 'save' on="submit"}}>
        <div class="modal-body">
            <div {{bind-attr class="errors.title:error :field"}}>
              <label>Title</label>
              {{view Ember.TextField valueBinding="title" class="form-control"}}
              {{#each error in errors.title}}{{error.message}}{{/each}}
            </div>

            <div {{bind-attr class="errors.body:error :field"}}>
              <label>Body</label>
              {{view Ember.TextArea valueBinding="body" class="form-control"}}
              {{#each error in errors.body}}{{error.message}}{{/each}}
            </div>

            <div {{bind-attr class="errors.group:error :field"}}>
              <label>Group</label>
              {{view Ember.Select content = groups
                 optionValuePath="content.id"
                 optionLabelPath="content.name"
                 valueBinding="group_id"
                 class="form-control"
              }}
              {{#each error in errors.group}}{{error.message}}{{/each}}
            </div>
        </div>
        <div class="modal-footer">
          <button type="submit" {{bind-attr disabled="shouldDisableSubmit"}} class="btn btn-info">Save</button>
          <button {{action 'close'}} class="btn btn-default">Cancel</button>
          {{#if isSaving}}
            <img src="{{unbound App.AJAX_LOADER_IMG}}" alt="Loading..." class="ajax-loader">
            Saving...
          {{/if}}
        </div>
        </form>
      </div>

    {{/if}}
  </div>
</div>


